<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
    <name>List of Articles</name>
    <author>Ivan Komlev</author>
    <creationDate>March 2020</creationDate>
    <copyright>Copyright (C) 2010-2020 Ivan Komlev. All rights reserved.</copyright>
    <license>GNU General Public License</license>
    <authorEmail>support@joomlaboat.com</authorEmail>
    <authorUrl>http://www.joomlaboat.com/</authorUrl>
    <version>1.3.9</version>
    <description>List of Articles Plugin v 1.3.9</description>
	
	<files>
	        <filename plugin="listofarticles">listofarticles.php</filename>
		<filename>render.php</filename>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field  name="articlecssclass" type="text" default="" label="Artile List CSS Class" description="" />
				<field  name="menucssclass" type="text" default="" label="Menu List CSS Class" description="" />
				<field type="list" name="addslash" default="0" label="Add slash character" description="Add slash character before image path." >
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
			</fieldset>
		</fields>
	</config>

	<languages>
        	<language tag="en-GB">language/en-GB/en-GB.plg_content_listofarticles.ini</language>
	</languages>


	<updateservers>
	    <server type="extension" enabled="1" element="plg_listofarticles" priority="2" name="List of articles">http://joomlaboat.com/updates/extensions/listofarticles.xml</server>
	</updateservers>

</extension>
